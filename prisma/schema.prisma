generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id           String   @id @default(cuid())
  internalCode Int      @unique @default(autoincrement())
  mlItemId     String   @unique
  title        String
  slug         String   @unique
  category     String
  price        Decimal
  promoPrice   Decimal?
  offPercent   Int?
  description  String
  images       Json
  rating       Float?
  reviewsCount Int?
  affiliateUrl String
  isPromo      Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  lastSyncAt   DateTime?
}