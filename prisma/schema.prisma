generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id           String   @id @default(cuid())
  internalCode Int      @unique @default(autoincrement())
  mlItemId     String   @unique
  title        String
  slug         String   @unique
  category     String
  price        Decimal  @db.Decimal(10,2)
  promoPrice   Decimal? @db.Decimal(10,2)
  offPercent   Int?
  description  String   @db.Text
  images       Json
  rating       Float?
  reviewsCount Int?
  affiliateUrl String
  isPromo      Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  lastSyncAt   DateTime?

  @@index([category])
}
model MlToken {
  id           String   @id @default("main")
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  updatedAt    DateTime @updatedAt
}